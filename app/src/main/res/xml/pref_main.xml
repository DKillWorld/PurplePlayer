<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="UI">
    <Preference
        android:key="primary_color"
        android:title="Primary color"
        android:summary="Base Color of app" />
    <Preference
        android:key="list_background"
        android:title="List background color"
        android:summary="Tip: Use lightest version of Primary color"/>
    <!--<Preference-->
        <!--android:key="playback_speed"-->
        <!--android:title="Playback Speed"-->
        <!--android:summary="Change speed of player"/>-->

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Lyrics">
        <CheckBoxPreference
            android:title="Use QuickLyric as default"
            android:key="@string/key_use_quicklyric"
            android:summaryOff="Purple Player default"
            android:summaryOn="QuickLyric"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Privacy">
        <CheckBoxPreference
            android:title="Send anonymous usage data"
            android:defaultValue="true"
            android:key="Anonymous_Data"
            android:summary="For improvement of product"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Misc">
        <Preference
            android:title="FAQ"
            android:key="FAQ"
            android:icon="@drawable/ic_help_and_faq"/>
        <Preference
            android:title="Rate Us"
            android:key="Rate_Us"
            android:icon="@drawable/ic_drawer_support_development"/>
        <Preference
            android:title="Upgrade to Purple Player Pro"
            android:key="Buy_Pro"
            android:icon="@drawable/ic_drawer_buypro"/>
        <Preference
            android:title="Help in translating Purple Player!"
            android:key="Translation_Help"/>
    </PreferenceCategory>
</PreferenceScreen>