<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory android:title="UI">
        <!--<CheckBoxPreference-->
            <!--android:key="BaseTheme"-->
            <!--android:title="Base theme"-->
            <!--android:summaryOff="Light"-->
            <!--android:summaryOn="Dark"/>-->
        <Preference
            android:key="primary_color"
            android:summary="Change the arimary color of app"
            android:title="Primary color" />
        <Preference
            android:key="accent_color"
            android:summary="Change the accent color of app"
            android:title="Accent color"/>
        <!--<Preference-->
        <!--android:key="playback_speed"-->
        <!--android:title="Playback Speed"-->
