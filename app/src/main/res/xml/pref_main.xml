<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="UI">
        <Preference
            android:key="primary_color"
            android:summary="Change the arimary color of app"
            android:title="Primary color" />
        <Preference
            android:key="accent_color"
            android:summary="Change the accent color of app"
            android:title="Accent Color"/>
        <!--<Preference-->
        <!--android:key="playback_speed"-->
        <!--android:title="Playback Speed"-->
        <!--android:summary="Change speed of player"/>-->

    </PreferenceCategory>
    <PreferenceCategory android:title="Lyrics">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_use_quicklyric"
            android:summaryOff="Purple Player default"
            android:summaryOn="QuickLyric"
            android:title="Use QuickLyric as default" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Privacy">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="Anonymous_Data"
            android:summary="For improvement of product"
            android:title="Send anonymous usage data" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Experimental Features\n(Uncheck if app crashes)">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="Use_Root_Background"
            android:summary="Set albumart as now playing background"
            android:title="Albumart as background" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Misc">
        <Preference
            android:icon="@drawable/ic_help_and_faq"
            android:key="FAQ"
            android:title="FAQ" />
        <Preference
            android:icon="@drawable/ic_drawer_support_development"
            android:key="Rate_Us"
            android:title="Rate Us" />
        <Preference
            android:icon="@drawable/ic_drawer_buypro"
            android:key="Buy_Pro"
            android:title="Upgrade to Purple Player Pro" />
        <Preference
            android:key="Translation_Help"
            android:title="Help in translating Purple Player!" />
    </PreferenceCategory>
</PreferenceScreen>